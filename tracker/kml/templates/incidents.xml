{% load tz %}<?xml version="1.0" encoding="UTF-8"?>
<markers>
{%for item in list%}
<marker 
	name="{{item.description}}" 
	address="
	{%if item.user.userdetail.epicNumber%}Number:{{item.user.userdetail.epicNumber}}{%endif%}
	{%if item.user.userdetail.callSign%}&lt;br&gt;Call Sign: {{item.user.userdetail.callSign}}&lt;br&gt;{%endif%}
	{%if item.user.userdetail.sipAddress%}&lt;a href='sip:{{item.user.userdetail.sipAddress}}'&gt;Call {{item.user}}&lt;a&gt;&lt;br&gt;{%endif%}
	Latest Position Date:{{item.dateoccurred|utc|date:'Y-m-d H:i:s T'}}&lt;br&gt;
	Latitude: {{item.latitude}}&lt;br&gt;
	Longitude: {{item.longitude}}"
	lat="{{item.latitude}}" 
	lng="{{item.longitude}}" 
	type="{{item.pin}}"
	date="{{item.dateoccurred|utc|date:'Y-m-d H:i:s T'}}"
	mid="{{item.user.id}}"
    image="item.image"
	/>
{%endfor%}
</markers>