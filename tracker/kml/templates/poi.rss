{% load tz %}{% localtime off %}<?xml version="1.0" encoding="utf-8"?>
 <feed xmlns="http://www.w3.org/2005/Atom" 
      xmlns:georss="http://www.georss.org/georss" 
      xmlns:gml="http://www.opengis.net/gml">
  <title>People Positions Now</title>
   <link href="http://trackme.globalepic.org"/>
   <updated>{%now "Y-m-d"%}T{%now "H:i:s"%}+04:00</updated>
   <author>
      <name>EPIC {{server}}</name>
   </author>
   <id>http://trackme.globalepic.org/trackme/kml/poi.rss</id>
{%for item in list%}
   <entry>
        <title>{{item.description}} {{item.dateoccurred}}</title>
        <link href="http://trackme.globalepic.org/trackme/kml/poi.rss#{{item.user.id}}"/>
        <id>http://trackme.globalepic.org/trackme/kml.rss#{{item.user.id}}</id>
        <updated>{{item.date_reported.isoformat}}{%if item.user.timeZone%}+00:00{%else%}+04:00{%endif%}</updated>
        <summary>
        <![CDATA[
        Recorded: {{item.date_reported}}
        Comment:{%if item.description%}{{item.description}}{%endif%}
        {%if item.image%}Image: <a href='http://trackme.globalepic.org/{{item.image.url}}'><img height="100" src='http://trackme.globalepic.org/trackme{{item.image.url}}'/></a>{%endif%}
        ]]></summary>
        {%if item.imageurl%}<enclosure url="http://trackme.globalepic.org/{{item.image.url}}" type="image/jpeg" />{%endif%}
      <georss:where>
         <gml:Point>
            <gml:pos>{{item.latitude}} {{item.longitude}}</gml:pos>
         </gml:Point>
      </georss:where>
   </entry>
   {%endfor%}
 </feed>
 
 
 
 
 

	name="{{item.description}}" 
	address="
	{%if item.user.epicNumber%}Number:{{item.user.epicNumber}}{%endif%}
	{%if item.user.callSign%}&lt;br&gt;Call Sign: {{item.user.callSign}}&lt;br&gt;{%endif%}
	{%if item.user.sipAddress%}&lt;a href='sip:{{item.user.sipAddress}}'&gt;Call {{item.user}}&lt;a&gt;&lt;br&gt;{%endif%}
	Latest Position Date:{{item.dateoccurred|utc|date:'Y-m-d H:i:s T'}}&lt;br&gt;
	Latitude: {{item.latitude}}&lt;br&gt;
	Longitude: {{item.longitude}}"
	lat="{{item.latitude}}" 
	lng="{{item.longitude}}" 
	type="{{item.pin}}"
	date="{{item.dateoccurred|utc|date:'Y-m-d H:i:s T'}}"
	mid="{{item.user.id}}"
    image="{%if item.image%}{{item.image.url}}{%endif%}"
    description="{%if item.description%}{{item.description}}{%endif%}"

</markers>
 
 
 {% endlocaltime %}